<div>
  <%= render "shared/list_fp" %>
</div>

<div>
<h2>ニックネーム：<%= @planner.name %></h2>
<%= link_to "編集", edit_planner_path(current_planner) %>
</div>

<table>
  <tr>
    <th>日付</th>
    <th>開始時間</th>
    <th>予約ステータス</th>
    <th></th>
  </tr>
  <% @reservation_frames.each do |reservation_frame| %>
  <tr>
    <td><%= reservation_frame.date %></td>
    <td><%= reservation_frame.time_frame.start_at %></td>
    <td>
      <% if reservation_frame.reserved? %>
      予約済み
      <% else %>
      未予約
      <% end %>
    </td>
    <td><%= link_to "キャンセル", reservation_frame_path(reservation_frame.id), method: :delete %></td>
  </tr>
  <% end %>
</table>
